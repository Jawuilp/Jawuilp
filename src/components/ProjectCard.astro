---
interface Props {
  title: string;
  description: string;
  imageUrl?: string;
  codeUrl?: string;
  demoUrl?: string;
}

const { title, description, imageUrl, codeUrl, demoUrl } = Astro.props;
---

<div class="bg-secondary rounded-lg overflow-hidden shadow-lg border border-tertiary p-6 flex flex-col">
  {imageUrl && (
    <img
      src={imageUrl}
      alt={`Imagen del proyecto ${title}`}
      class="w-full h-48 object-cover rounded-md mb-4"
    />
  )}
  <h3 class="text-xl font-bold text-text mb-2">{title}</h3>
  <p class="text-text-secondary text-base mb-4 flex-grow">
    {description}
  </p>
  <div class="flex flex-wrap gap-4 mt-auto">
    {codeUrl && (
      <a
        href={codeUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block bg-accent text-primary px-4 py-2 rounded-md hover:opacity-90 transition-opacity duration-200 text-sm font-semibold"
      >
        CÃ³digo
      </a>
    )}
    {demoUrl && (
      <a
        href={demoUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block border border-accent text-accent px-4 py-2 rounded-md hover:bg-accent hover:text-primary transition-colors duration-200 text-sm font-semibold"
      >
        Demo
      </a>
    )}
  </div>
</div>
